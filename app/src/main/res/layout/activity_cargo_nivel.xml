<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CargoNivelActivity">

    <include layout="@layout/app_bar_layout" android:id="@+id/cargo_app_bar" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/nivel_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:hint="@string/nivel">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/nivel_input1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nivel" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/cargo_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="178dp"
        android:hint="@string/cargo">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/cargo_input1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/cargo" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/guardar_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="46dp"
        android:layout_marginRight="46dp"
        android:layout_marginBottom="205dp"
        android:background="@color/colorAccent2"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="@string/guardar_cambios"
        android:textColor="@android:color/white" />
</RelativeLayout>