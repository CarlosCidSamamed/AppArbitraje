        app:civ_border_width="4dp"
        app:civ_border_color="@color/colorRojo"/>

    <TextView
        android:id="@+id/dos_comp_numeroCompetidor_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
