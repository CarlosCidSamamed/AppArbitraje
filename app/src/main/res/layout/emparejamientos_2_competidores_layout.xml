        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emparejamientos_dos_app_bar" />

    <TextView
        android:id="@+id/dos_comp_pais_2"
