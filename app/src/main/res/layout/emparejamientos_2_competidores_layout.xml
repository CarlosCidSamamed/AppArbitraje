        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.156"
        app:layout_constraintStart_toEndOf="@+id/dos_comp_foto_1"
        app:layout_constraintTop_toBottomOf="@+id/dos_comp_nombre_1" />

    <View
        android:id="@+id/dos_comp_linea_horizontal_Rojo"
